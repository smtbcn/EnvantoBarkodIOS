<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Üst kısım: Müşteri/Ürün + Adet Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/badge_adet"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_musteri_adi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Müşteri Adı"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_urun_adi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Ürün Adı"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Adet Badge -->
            <LinearLayout
                android:id="@+id/badge_adet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/badge_adet_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/tv_urun_adet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Orta kısım: Depo bilgileri -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Sol: Depo Aktaran -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Araca Yükleyen"
                    android:textAllCaps="true"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_depo_aktaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Ahmet Yılmaz"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_depo_aktaran_tarihi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.01.2024 14:30"
                    android:textColor="#666666"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Sağ: Mevcut Depo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yüklü Araç"
                    android:textAllCaps="true"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mevcut_depo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="DOĞTAŞ ARACI"
                    android:textColor="#1565C0"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Alt kısım: Aksiyon Butonu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Depoya Geri Bırak Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_return_to_depot"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:text="Depoya Geri Bırak"
                android:textColor="#D32F2F"
                android:textSize="11sp"
                android:textStyle="bold"
                app:cornerRadius="6dp"
                app:icon="@drawable/ic_refresh"
                app:iconSize="12dp"
                app:strokeColor="#D32F2F"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 