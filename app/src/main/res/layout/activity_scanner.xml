<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Barkod Tarama Ekranı
  
  Bu layout tam ekran kamera önizlemesi, tarama alanı, tarama çizgisi,
  flash açma/kapama butonu ve ayarlar butonu içerir.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ScannerActivity">

    <!-- Kamera Önizleme Alanı -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Karanlık Arka Plan Örtüsü - Çok Daha Şeffaf Hale Getirildi, Gerekirse Tamamen Kaldırabilirsiniz -->

    <View
        android:id="@+id/scanner_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#25000000"
        android:visibility="gone" />

    <!-- Tarama Alanı - Şeffaf Pencere -->
    <View
        android:id="@+id/scan_area"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tarama Çizgisi - Animasyon İçin -->
    <View
        android:id="@+id/scanner_line"
        android:layout_width="240dp"
        android:layout_height="2dp"
        android:background="#2FFF00"
        app:layout_constraintBottom_toBottomOf="@+id/scan_area"
        app:layout_constraintEnd_toEndOf="@+id/scan_area"
        app:layout_constraintStart_toStartOf="@+id/scan_area"
        app:layout_constraintTop_toTopOf="@+id/scan_area" />
        
    <!-- Guideline'lar - Ekranı 3 eşit parçaya böler -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />
        
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <!-- Home Butonu (Solda) -->
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/flash_button_background"
        android:contentDescription="@string/home"
        android:padding="12dp"
        android:src="@drawable/ic_home"
        android:elevation="6dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_left"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Flash Kontrol Butonu - ToggleButton Olarak (Tam Ortada) -->
    <ToggleButton
        android:id="@+id/switch_flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/flash_button_background"
        android:textOff="@string/flash_on"
        android:textOn="@string/flash_off"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/flash_button_icon"
        android:drawablePadding="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="6dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right" />

    <!-- Ayarlar Butonu (Sağda) -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/flash_button_background"
        android:contentDescription="@string/action_settings"
        android:padding="12dp"
        android:src="@drawable/ic_settings"
        android:tint="@color/white"
        android:elevation="6dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_right"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 