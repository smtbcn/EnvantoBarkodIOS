<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Flash Butonu Arkaplan Selector
  
  checked=true: Kırmızı arkaplan (Flash açık/kapatma durumu)
  checked=false: Yeşil arkaplan (Flash kapalı/açma durumu)
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Flash Açık (Kırmızı Buton - Kapatmak için) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#80F44336" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#40FFFFFF" />
        </shape>
    </item>

    <!-- Flash Kapalı (Yeşil Buton - Açmak için) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#804CAF50" />
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#40FFFFFF" />
        </shape>
    </item>
</selector>
